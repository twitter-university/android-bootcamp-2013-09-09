<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">

        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:background">@null</item>
    </style>

    <style name="yambaText" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textColor">@color/label</item>
    </style>

    <style name="yambaText.bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="yambaText.medium">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="yambaText.button">
        <item name="android:textSize">24sp</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="yambaText.label">
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>